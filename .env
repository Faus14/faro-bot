BOT_PUBLIC_NAME=@FaroBot
BRAND_NAME=Faro

# ===== Modo single-node (mismo servidor) =====
DEFAULT_ALIAS=LOCAL
VALIDATOR_INDEX=1212617                # ej. 1212617 (número)

# ===== Switches por componente (habilita comandos/alertas) =====
ENABLE_EL=true                  # Execution Layer (Geth/Nethermind/Besu)
ENABLE_BN=true                  # Beacon Node (Lighthouse/Prysm/Teku/Nimbus)
ENABLE_VC=true                  # Validator Client (Lighthouse/Prysm/Teku/Nimbus)
ENABLE_NODE_EXPORTER=true       # Host (CPU/RAM/Disco) por node-exporter

# ===== Execution Layer (Prometheus metrics) =====
# Ajustá según tu cliente:
# Geth:         --metrics --metrics.addr 127.0.0.1 --metrics.port 6060   -> /debug/metrics
# Nethermind:   --metrics --metrics-port 6060                            -> /metrics
# Besu:         --metrics-enabled --metrics-host=127.0.0.1 --metrics-port=9545 -> /metrics
EL_METRICS_HOSTPORT=127.0.0.1:6060
EL_METRICS_PATH=/debug/metrics

# ===== Beacon Node (metrics + REST) =====
# Lighthouse BN (ej.): --metrics --metrics-address 127.0.0.1 --metrics-port 5054
# REST (Lighthouse):   --http --http-address 127.0.0.1 --http-port 5052
# Prysm BN:            --monitoring-port=8080  (expone /metrics en 127.0.0.1:8080), REST: 3500 por defecto (/eth/v1/…)
# Teku BN:             --metrics-enabled --metrics-host 127.0.0.1 --metrics-port 8008, REST 5051/5052 según config
# Nimbus BN:           --metrics --metrics-address=127.0.0.1 --metrics-port=8008, REST 5052 opcional
BN_METRICS_HOSTPORT=127.0.0.1:5054
BN_METRICS_PATH=/metrics
BN_REST_BASE=http://127.0.0.1:5052

# ===== Validator Client (metrics) =====
# Lighthouse VC: --metrics --metrics-address 127.0.0.1 --metrics-port 5064
# Prysm VC:      --monitoring-port=8081 (o similar)
# Teku VC:       --metrics-enabled --metrics-host 127.0.0.1 --metrics-port 8009
# Nimbus VC:     --metrics --metrics-address=127.0.0.1 --metrics-port=8009
VC_METRICS_HOSTPORT=127.0.0.1:5064
VC_METRICS_PATH=/metrics

# ===== Host metrics (node-exporter) =====
NODE_EXPORTER_HOSTPORT=127.0.0.1:9100

# ===== Hoodi API (para /atesta) =====
HUDI_API_BASE=https://hoodi.beaconcha.in/api/v1

# ===== Alertas (Telegram - usa el mismo bot) =====
ALERTS_CHAT_ID=                 # ej. 5184123209 (tu chat/grupo)

# ===== Umbrales de Alertas (editables) =====
HOST_MEM_THRESHOLD=90           # % RAM > X
HOST_DISK_THRESHOLD=90          # % / > X
HOST_CPU_THRESHOLD=90           # % CPU > X (prom 5m)
BN_PEERS_THRESHOLD=30           # peers BN < X
GETH_PEERS_THRESHOLD=25         # peers EL < X
